<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
			 xmlns:models="clr-namespace:SIT.Manager.Models"
             xmlns:vm="clr-namespace:SIT.Manager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SIT.Manager.Views.MainView"
             x:DataType="vm:MainViewModel"
			 x:CompileBindings="True"
			 Background="{DynamicResource AppBlack}">
	<UserControl.DataTemplates>
		<DataTemplate DataType="{x:Type models:NavigationItem}">
			<Grid ColumnDefinitions="Auto, *, Auto"
				  ToolTip.Tip="{Binding ToolTip}">
				<ui:SymbolIcon Grid.Column="0"
							   Symbol="{Binding Icon}"
							   VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1"
						   VerticalAlignment="Center"
						   Margin="8,0,0,0"
						   Text="{Binding Name}"/>
			</Grid>
		</DataTemplate>
	</UserControl.DataTemplates>
	
	<UserControl.Styles>
		<Style Selector="ListBox.NavigationMenu">
			<Setter Property="Margin" Value="0,0,4,0"/>
		</Style>

		<Style Selector="ListBox.NavigationMenu > ListBoxItem">
			<Setter Property="Height" Value="24" />
			<Setter Property="Padding" Value="8,0" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
		</Style>
	</UserControl.Styles>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Name="InfoBarStackPanel" 
					Grid.Row="0">
			<Grid ColumnDefinitions="auto, auto, auto, *, auto" 
				  Margin="0,8"
				  IsVisible="{Binding UpdateAvailable}">
				<Panel Margin="16,0" 
					   VerticalAlignment="Center" 
					   Grid.Column="0">
					<Ellipse Fill="{DynamicResource AppError}" Width="18" Height="18"/>
					<ui:SymbolIcon Symbol="ImportantFilled" 
								   VerticalAlignment="Center"/>
				</Panel>
				
				<TextBlock Text="{DynamicResource UpdateNotification}" 
						   Grid.Column="1" 
						   VerticalAlignment="Center"/>

				<Button Command="{Binding UpdateAppCommand}"
						VerticalAlignment="Center"
						FontSize="14"
						Margin="8,0"
						Grid.Column="2">
					<StackPanel Orientation="Horizontal">
						<ui:SymbolIcon Symbol="Up" Margin="0,0,4,0"/>
						<TextBlock Text="{DynamicResource UpdateButtonTitle}"/>
					</StackPanel>
				</Button>
				
				<Button Command="{Binding CloseButtonCommand}" 
						HorizontalAlignment="Right" 
						Margin="0 0 4 0"
						Background="Transparent" 
						Grid.Column="4" 
						BorderBrush="Transparent">
					<ui:SymbolIcon Symbol="Cancel"/>
				</Button>
			</Grid>

			<ItemsControl ItemsSource="{Binding BarNotifications, Mode=OneWay}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<ui:InfoBar HorizontalAlignment="Stretch"
									Title="{Binding Title}"
									Message="{Binding Message}"
									Severity="{Binding Severity}"
									IsOpen="True"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>

		<SplitView IsPaneOpen="True"
				   DisplayMode="Inline"
				   OpenPaneLength="166"
				   Grid.Row="1">
			<SplitView.Pane>
				<Grid RowDefinitions="Auto, *, Auto, Auto"
					  Background="{DynamicResource AppPrimary}">
					<ListBox Grid.Row="0"
							 IsEnabled="{Binding !IsInstallRunning}"
							 ItemsSource="{Binding MainNavigationItems}"
							 SelectedItem="{Binding SelectedMainNavigationItem}"
							 SelectionMode="Single"
							 Classes="NavigationMenu"/>

					<Image Grid.Row="1"
						   RenderOptions.BitmapInterpolationMode="HighQuality"
						   Source="avares://SIT.Manager.ASM/Assets/sit-logo-5.png"/>

					<ListBox Grid.Row="2"
							 IsEnabled="{Binding !IsInstallRunning}"
							 ItemsSource="{Binding FooterNavigationItems}"
							 SelectedItem="{Binding SelectedFooterNavigationItem}"
							 Classes="NavigationMenu"
							 Margin="0"/>

					<SelectableTextBlock Margin="2,4,0,2"
										 Grid.Row="3"
										 FontSize="11"
										 Opacity="0.6"
										 Text="{Binding ManagerVersionString}"/>
				</Grid>
			</SplitView.Pane>

			<Grid RowDefinitions="*,Auto">
				<ContentControl CornerRadius="8,0,0,8"
								Background="{DynamicResource AppAccent}"
								Content="{Binding CurrentView}">
					<ContentControl.Styles>
						<Style Selector=":is(UserControl)">
							<Setter Property="CornerRadius" Value="8,0,0,8"/>
						</Style>
					</ContentControl.Styles>
				</ContentControl>
			</Grid>
		</SplitView>
	</Grid>
</UserControl>
